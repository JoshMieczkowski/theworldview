<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#545454">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="375dp"
        android:id="@+id/imgCountryFlag"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/countryInfo"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imgCountryFlag"
        android:layout_alignStart="@id/imgCountryFlag"
        android:layout_alignLeft="@id/imgCountryFlag"
        android:layout_alignEnd="@id/imgCountryFlag"
        android:layout_alignRight="@id/imgCountryFlag"
        android:layout_marginTop="10dp"/>
</RelativeLayout>